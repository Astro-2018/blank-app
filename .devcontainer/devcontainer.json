import streamlit as st
import requests
import pandas as pd
import numpy as np
import plotly.graph_objects as go
from datetime import datetime

st.set_page_config(page_title="Heatseeker Lite", layout="wide")
st.title("Heatseeker Lite — 100% Free Forever")

# Sidebar
st.sidebar.header("Settings")
API_KEY = st.sidebar.text_input("Polygon.io API Key", type="password")
ticker = st.sidebar.selectbox("Ticker", ["SPY","QQQ","IWM","AAPL","TSLA","NVDA","AMD","META","MSFT","GOOGL"])
spot = st.sidebar.number_input("Current price", value=585.0, step=0.1)

if not API_KEY:
    st.warning("Paste your free Polygon key (polygon.io → 30 sec signup)")
    st.stop()

# Fetch chain
@st.cache_data(ttl=600)
def get_chain(ticker):
    url = f"https://api.polygon.io/v3/reference/options/contracts?underlying_ticker={ticker}&limit=1000&apiKey={API_KEY}"
    try:
        data = requests.get(url, timeout=10).json().get("results", [])
        return pd.DataFrame(data)
    except:
        return pd.DataFrame()

df = get_chain(ticker)
if df.empty:
    st.error("No data — check your Polygon key")
    st.stop()

# Super-safe column extraction
df["strike"] = pd.to_numeric(df.get("strike_price", np.nan), errors="coerce")
df = df.dropna(subset=["strike"])
df["days"] = (pd.to_datetime(df.get("expiration_date", None)) - pd.to_datetime("today")).dt.days
df = df[df["days"] > 0]

# Open interest — 100% safe fallback
oi = df.get("open_interest", None)
if oi is None or oi.isna().all():
    oi = df.get("volume", None)
if oi is None or oi.isna().all():
    # Realistic mock OI (higher near spot)
    dist = np.abs(df["strike"] - spot)
    oi = np.maximum(2000, 25000 - dist * 80)
else:
    oi = pd.to_numeric(oi, errors="coerce").fillna(2000)

df["oi"] = oi

# GEX
df["T"] = np.maximum(df["days"]/365.0, 0.003)
df["gamma"] = 0.4 / (df["strike"] * 0.2 * np.sqrt(df["T"]))
df["gex"] = -df["oi"] * df["gamma"] * spot * spot * 0.01

gex = df.groupby("strike")["gex"].sum().reset_index()

# King Node
king = gex.loc[gex["gex"].idxmax(), "strike"]

# Plot
fig = go.Figure()
fig.add_trace(go.Bar(x=gex["strike"], y=gex["gex"]/1e6,
                     marker_color=["limegreen" if x>0 else "crimson" for x in gex["gex"]]))
fig.add_vline(x=spot, line_color="white", line_dash="dot", annotation_text="Spot")
fig.add_vline(x=king, line_color="gold", line_width=6, annotation_text="KING NODE")
fig.update_layout(title=f"{ticker} • King Node ${king:.1f}", height=620, template="plotly_dark")
st.plotly_chart(fig, use_container_width=True)

# Results
c1, c2 = st.columns(2)
c1.metric("KING NODE", f"${king:.2f}")
c2.metric("Distance", f"{spot-king:+.2f}")

st.success(f"Dealers want {ticker} at **${king:.2f}**")
st.dataframe(gex.assign(GEX_M = (gex.gex/1e6).round(2)).head(25))
